<Window x:Class="GenerativeWorldBuildingUtility.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dw="clr-namespace:DrWPF.Windows.Controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenerativeWorldBuildingUtility.View"
        mc:Ignorable="d"
        Title="World Building Generator" Height="750" Width="1000">
    <Window.Resources>
        <ResourceDictionary>
            <!-- Load this specific theme because the Aero theme for CheckBox has issues. -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PresentationFramework.Royale;V3.0.0.0;31bf3856ad364e35;component\themes\royale.normalcolor.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="TreeViewItemStyle" TargetType="TreeViewItem">
                <Setter Property="IsExpanded" Value="True" />
                <Setter Property="KeyboardNavigation.AcceptsReturn" Value="True" />
                <Setter Property="dw:VirtualToggleButton.IsVirtualToggleButton" Value="True" />
                <Setter Property="dw:VirtualToggleButton.IsChecked" Value="{Binding Active}" />
            </Style>

            <HierarchicalDataTemplate  x:Key="CheckBoxItemTemplate" ItemsSource="{Binding Children, Mode=OneTime}">
                <StackPanel Orientation="Horizontal">
                    <!-- These elements are bound to a FooViewModel object. -->
                    <CheckBox Focusable="False" IsChecked="{Binding Active}" VerticalAlignment="Center"/>
                    <ContentPresenter Content="{Binding Name, Mode=OneTime}" Margin="2,0"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="25" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <!-- File menu on the left -->
            <Menu x:Name="MainMenuBar" DockPanel.Dock="Left" Height="41">
                <MenuItem Header="Settings" >
                    <MenuItem Header="Set API Key" Command="{Binding SetAPIKey}"/>
                    <MenuItem Header="Remove Personal API Key" Command="{Binding RemoveAPIKey}"/>
                </MenuItem>
                <MenuItem Header="Saved Generations" Command="{Binding SavedGenerations}"/>
                <MenuItem Header="Create Custom Generator" Command="{Binding GeneratorEditor}"/>
            </Menu>
        </DockPanel>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF424242" Offset="1"/>
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFBBBBBB" Offset="0.526"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="573*"/>
                <ColumnDefinition Width="227*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label" Content="World Building Generator" HorizontalAlignment="Left" Height="66" Margin="198,10,0,0" VerticalAlignment="Top" Width="632" FontSize="35" FontWeight="Bold" Grid.ColumnSpan="2" FontFamily="Blackadder ITC"/>
            <Image x:Name="image" HorizontalAlignment="Left" Margin="10,0,0,10" Width="139" RenderTransformOrigin="0.257,0.504" Source="/RoguishCartographer.png" Height="131" VerticalAlignment="Bottom"/>
            <TextBox x:Name="PromptReturn" Margin="198,168,10,20" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="{Binding BoundProperties.PromptResult, Mode=TwoWay}"/>
            <Label x:Name="label1" Content="What would you like to generate?" HorizontalAlignment="Left" Height="35" Margin="198,76,0,0" VerticalAlignment="Top" Width="232"/>
            <ComboBox x:Name="comboBox" Margin="198,108,10,0" Height="24" VerticalAlignment="Top" ItemsSource="{Binding BoundProperties.LoadedPrompts, Mode=TwoWay}" SelectedValue="{Binding BoundProperties.SelectedPrompt, Mode=TwoWay}"/>
            <Button x:Name="GenerateButton" Content="Generate" Height="26" Margin="200,137,199,0" VerticalAlignment="Top" Command="{Binding GeneratePrompt}"/>
            <GridSplitter x:Name="gridSplitter" Grid.Column="1" HorizontalAlignment="Left" Margin="10,186,0,75" Width="5"/>
            <Button x:Name="SaveButton" Content="Save" Height="26" Margin="0,137,20,0" VerticalAlignment="Top" Command="{Binding SavePrompt}" HorizontalAlignment="Right" Width="174"/>
            <!--<Label x:Name="label2" Content="AI Model:" HorizontalAlignment="Left" Margin="18,123,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="AIModel" HorizontalAlignment="Left" Margin="84,125,0,0" VerticalAlignment="Top" Width="77" ItemsSource="{Binding BoundProperties.AIModels, Mode=TwoWay}" SelectedItem="{Binding BoundProperties.SelectedAIModel, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding AIModelChange}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>-->
            <Grid Grid.Column ="1" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="191*"/>
                    <RowDefinition Height="353*"/>
                    <RowDefinition Height="165*"/>
                </Grid.RowDefinitions>
                <TreeView x:Name="treeView" Grid.Row="1" Margin="39,15,38,10" ItemContainerStyle="{StaticResource TreeViewItemStyle}" ItemsSource="{Binding RandomElements, Mode=OneTime}" ItemTemplate="{StaticResource CheckBoxItemTemplate}"/>
                <Label x:Name="label1_Copy" Content="Contextual Information" HorizontalAlignment="Left" Height="35" Margin="39,78,0,0" VerticalAlignment="Top" Width="232"/>
                <TextBox x:Name="PromptReturn_Copy" ToolTip="Provide information regarding your world, or the surroundings of the thing you wish to generate." Grid.Row="0" Margin="39,100,35,5" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="{Binding BoundProperties.ContextualInformation, Mode=TwoWay}" AcceptsReturn="True" AcceptsTab="True"/>
                <GridSplitter x:Name="gridSplitter1" Margin="57,3,53,0" Height="7" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.ColumnSpan ="1" Grid.Row="1"/>
                <Label x:Name="label1_Copy2" Content="Modifiers" HorizontalAlignment="Left" Height="27" Margin="39,15,0,0" VerticalAlignment="Top" Width="232" Grid.Row="2"/>
                <TextBox x:Name="PromptReturn_Copy2" ToolTip="Provide details for how you want the generator to output your information." Grid.Row="2" Margin="36,47,38,23" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Text="{Binding BoundProperties.PromptModifiers, Mode=TwoWay}" AcceptsReturn="True" AcceptsTab="True"/>
                <GridSplitter x:Name="gridSplitter12" Margin="57,3,53,0" Height="7" VerticalAlignment="Top" HorizontalAlignment="Stretch" Grid.ColumnSpan ="1" Grid.Row="2"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
