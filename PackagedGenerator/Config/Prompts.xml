<Prompts>
  <prompt name="template">
    <ValidModifiers value="TestModifier,TestModifier2"/> <!-- template prompt, HIDE ME ON FULL RELEASE-->
    <PromptLine id="1" filter="" value="">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
        <AppendedPrompt prompt="" promptQuery="" promptQueryReturnName=""/>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="" number ="" repeatable="" returnName=""/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Encounter - UNDER DEVELOPMENT">
    <ValidModifiers value="TestModifier,TestModifier2"/>
    <!-- template prompt, HIDE ME ON FULL RELEASE-->
    <PromptLine id="1" filter="" value="In a single paragraph, describe a @danger@ Level @number@ @encountertype@ encounter in a @locationtypes@ climage. Give a title. Give a setting. Give an Encounter Synopsis.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
        <AppendedPrompt prompt="Give Three key parts to the encounter listed as bullets." promptQuery="" promptQueryReturnName=""/>
        <AppendedPrompt prompt="Give three possible outcomes." promptQuery="" promptQueryReturnName=""/>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="DangerLevel" number ="1" repeatable="false" returnName="danger"/>
        <DataElement DataList="LocationTypes" number ="1" repeatable="false" returnName="locationtypes"/>
        <DataElement DataList="EncounterTypes" number ="1" repeatable="false" returnName="encountertype"/>
        <DataElement DataList="Numbers" number ="1" repeatable="true" returnName="number" displayName="Level"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Nation">
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Describe to me a fantasy nation. Their technology level is @Technology@.  They have a @GovernmentType@ government. Put the name in the header. Describe the government. Describe their technological level. Describe the arcitecture. Describe hollidays. Describe traditions. Describe the population. Describe the wealth. Describe their military.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="GovernmentTypes" number ="1" repeatable="true" returnName="GovernmentType"/>
        <DataElement DataList="Technology" number ="1" repeatable="true" returnName="Technology"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Fantasy Scene"><!-- Fantasy scene generator using var locationtypes-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Describe to me a fantasy scene, in great detail.  The scene is of a @LocationType@">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="LocationTypes" number ="1" repeatable="true" returnName="LocationType"/>
      </RandomData>
    </PromptLine>
  </prompt>
  
    <prompt name="One Liner"><!-- Fantasy scene generator using var locationtypes-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Please give me @number@ @line@ one liner.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="Numbers" number ="1" repeatable="true" returnName="number"/>
        <DataElement DataList="OneLinerTypes" number ="1" repeatable="true" returnName="line"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Guild - UNDER DEVELOPMENT">
    <!-- Fantasy scene generator using var locationtypes-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="I need you to write me a creative and random description of a fantasy guild.  in divided sections, please tell me: What is their name, how many members do they have, what is their goal, how strong are they.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Quest Hook - UNDER DEVELOPMENT">
    <!-- Quest generator using locationtype and number generator, includes NPC generation-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Please answer the following prompt as though you are writing an adventure path for Dungeons and Dragons, this means you need to be detailed with how things relate, and how puzzles/fights/encounters are solved or overcome: Describe a @complex@ @DangerLevel@ quest hook.  The scope is @scope@. The theme is @theme@. The quest starts in @LocationType@. The goal of the quest is to @QuestGoal@. Give a hook.  Do not be dramatic. What will happen if nothing is done? How will the quest impact the @scope@ if it is completed.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="LocationTypes" number ="1" repeatable="true" returnName="LocationType" displayName="Starting Location"/>
        <DataElement DataList="QuestTheme" number ="1" repeatable="true" returnName="theme"/>
        <DataElement DataList="QuestScope" number ="1" repeatable="true" returnName="scope"/>
        <DataElement DataList="QuestGoal" number ="1" repeatable="true" returnName="QuestGoal"/>
        <DataElement DataList="Complexity" number ="1" repeatable="true" returnName="complex"/>
        <DataElement DataList="DangerLevel" number ="1" repeatable="true" returnName="DangerLevel"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Quest Random Event">
    <!-- Quest generator using locationtype and number generator, includes NPC generation-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Describe a @complex@ @DangerLevel@ quest random event.  The scope is @scope@. The theme is @theme@. The quest starts in @LocationType@. The goal of the quest is to @QuestGoal@. Give only a random event..  Do not be dramatic.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="LocationTypes" number ="1" repeatable="true" returnName="LocationType" displayName="Starting Location"/>
        <DataElement DataList="QuestTheme" number ="1" repeatable="true" returnName="theme"/>
        <DataElement DataList="QuestScope" number ="1" repeatable="true" returnName="scope"/>
        <DataElement DataList="QuestGoal" number ="1" repeatable="true" returnName="QuestGoal"/>
        <DataElement DataList="Complexity" number ="1" repeatable="true" returnName="complex"/>
        <DataElement DataList="DangerLevel" number ="1" repeatable="true" returnName="DangerLevel"/>
      </RandomData>
    </PromptLine>
  </prompt>
  
  <prompt name="Quest"> <!-- Quest generator using locationtype and number generator, includes NPC generation-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Describe a @complex@ @DangerLevel@ quest, that takes place over the @scope@. The theme is @theme@. The quest starts in a @LocationType@. The goal of the quest is to @QuestGoal@. Give a title. Give a very detailed hook. Give an unexpected event. Give a resolution and describe how it saved the @scope@.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
        <AppendedPrompt prompt="describe @encounternumber@ encounters, traps, or puzzles. Describe the details of each one." promptQuery="" promptQueryReturnName=""/>
        <AppendedPrompt prompt="Describe @number@ NPCs to be used in the previously described quest. How do they relate to the quest." promptQuery="" promptQueryReturnName=""/>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="LocationTypes" number ="1" repeatable="true" returnName="LocationType" displayName="Starting Location"/>
        <DataElement DataList="Numbers" number ="1" repeatable="true" returnName="number" displayName="NPC Count"/>
        <DataElement DataList="Numbers" number ="1" repeatable="true" returnName="encounternumber" displayName="Number of Encounters"/>
        <DataElement DataList="QuestTheme" number ="1" repeatable="true" returnName="theme"/>
        <DataElement DataList="QuestScope" number ="1" repeatable="true" returnName="scope"/>
        <DataElement DataList="QuestGoal" number ="1" repeatable="true" returnName="QuestGoal"/>
        <DataElement DataList="Complexity" number ="1" repeatable="true" returnName="complex"/>
        <DataElement DataList="DangerLevel" number ="1" repeatable="true" returnName="DangerLevel"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name ="Building">
    <ValidModifiers value="Condensed"/>
    <PromptLine id="1" value="Describe a @QualityDescriptor@ fantasy @BuildingType@. What is its name?">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="BuildingTypes" number ="1" repeatable="false" returnName="BuildingType"/>
        <DataElement DataList="QualityDescriptor" number ="1" repeatable="false" returnName="QualityDescriptor"/>
      </RandomData>
    </PromptLine>
  </prompt>
  
  <prompt name ="NPC"> <!-- NPC generator using lists race and class-->
    <ValidModifiers value="Condensed"/>
    <PromptLine id="1" value="Generate a random @age@ @gender@ fantasy character description. Give their name and age in the header. Their alignment is @alignment@ (list as header). Their race is @race@ (list as header).  They are of class @class@ (list as header).  Their background is @background@, but they are now a @currentJob@.  Their personality is of type @personality@, describe it in great detail">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
        <AppendedPrompt prompt="if @background@ and @currentJob@ are the same, give no response. Otherwise, what has lead them from being a @background@ to now being a @currentJob@." promptQuery="" promptQueryReturnName=""/>
        <AppendedPrompt prompt="Describe this persons physical appearance and voice. They wear @cloths@, describe it." promptQuery="" promptQueryReturnName=""/>
        <AppendedPrompt prompt="Describe a unique flaw. Describe a unique quirk Describe a unique motivation. Be detailed." promptQuery="" promptQueryReturnName=""/>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="Gender" number ="1" repeatable="false" returnName="gender"/>
        <DataElement DataList="Races" number ="1" repeatable="false" returnName="race"/>
        <DataElement DataList="Classes" number ="1" repeatable="false" returnName="class"/>
        <DataElement DataList="Age" number ="1" repeatable="false" returnName="age"/>
        <DataElement DataList="PersonalityType" number ="1" repeatable="false" returnName="personality"/>
        <DataElement DataList="Alignment" number ="1" repeatable="false" returnName="alignment"/>
        <DataElement DataList="Backgrounds" number ="1" repeatable="false" returnName="background"/>
        <DataElement DataList="Backgrounds" number ="1" repeatable="false" returnName="currentJob"/>
        <DataElement DataList="ClothingTypes" number ="1" repeatable="false" returnName="cloths"/>
      </RandomData>
    </PromptLine>
  </prompt>
  
  <prompt name ="Name"> <!-- simple fantasy name generator-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Generate a random @gender@ @race@  name. Only display the name. First and last name.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="Gender" number ="1" repeatable="false" returnName="gender"/>
        <DataElement DataList="Races" number ="1" repeatable="false" returnName="race"/>
      </RandomData>
    </PromptLine>
  </prompt>
  
  <prompt name="Location"> <!-- location generator, not intended for populated areas, more a general generation-->
    <ValidModifiers value=""/>
    <PromptLine id="1" filter="" value="Generate a fantasy @climate@ location. Give a brief history of the area.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="Climate" number ="1" repeatable="false" returnName="climate"/>
      </RandomData>
    </PromptLine>
  </prompt>
  
  <prompt name="Number"> <!-- number generator, between 1 and 5000, HIDE ME ON FULL RELEASE-->
    <ValidModifiers value=""/>
    <PromptLine id="1" filter="" value="Give me a number between 1 and 5000">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="" number ="" repeatable="" returnName=""/>
        <DataElement DataList=""/>
      </RandomData>
    </PromptLine>
  </prompt>
  
  <prompt name="City"> <!-- City generator, using variables such as technology level, population number, climate, and government type-->
    <ValidModifiers value=""/>
    <PromptLine id="1" filter="" value="describe a @technology@ fantasy city with a @governmenttype@ government in a @climate@ location. The population is @population@.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="PopCenterPop" number ="1" repeatable="false" returnName="population"/>
        <DataElement DataList="Technology" number ="1" repeatable="false" returnName="technology"/>
        <DataElement DataList="Climate" number ="1" repeatable="false" returnName="climate"/>
        <DataElement DataList="GovernmentTypes" number ="1" repeatable="false" returnName="governmenttype"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Loot - UNDER DEVELOPMENT">
    <ValidModifiers value=""/>
    <PromptLine id="1" filter="" value="Generate loot for a fantasy quest. The loot should include at least two of the following types of loot: gemstones, a magic item or items of type @itemtype@, and fantasy currency measured in gold pieces. Sort the loot by type and put it in a bulleted list.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="MagicItemTypes" number ="1" repeatable="false" returnName="itemtype"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Sailing Ship - UNDER DEVELOPMENT"> <!-- sailing ship generator-->
    <ValidModifiers value=""/>
    <PromptLine id="1" value="Create and describe a basic named fantasy sailing ship. Do not use the words adorned, intricate, majestic, or shimmering in the response.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
        <AppendedPrompt prompt="describe @number@ crew members for the ship in the last prompt. Use the captains name in the last prompt" promptQuery="" promptQueryReturnName=""/>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="Numbers" number ="1" repeatable="false" returnName="number" displayName="Number of Crew"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Item - UNDER DEVELOPMENT">
    <ValidModifiers value=""/>
    <PromptLine id="1" filter="" value="Generate a fantasy magic item of type @itemtype@. The item @binary@ cursed.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="MagicItemTypes" number ="1" repeatable="false" returnName="itemtype"/>
        <DataElement DataList="Binary" number ="1" repeatable="false" returnName="binary" displayName="Is Cursed"/>
      </RandomData>
    </PromptLine>
  </prompt>

  <prompt name="Dungeon - UNDER DEVELOPMENT">
    <ValidModifiers value=""/>
    <PromptLine id="1" filter="" value="Generate a @element@ for a fantasy dungeon.  The dungeon theme is @theme@.  The dungeon is @difficulty@.  Be very descriptive.">
      <WordsBlacklist value=""/>
      <AppendedPrompts>
      </AppendedPrompts>
      <RandomData>
        <DataElement DataList="DungeonFeature" number ="1" repeatable="false" returnName="element"/>
        <DataElement DataList="QuestTheme" number ="1" repeatable="false" returnName="theme"/>
        <DataElement DataList="DangerLevel" number ="1" repeatable="false" returnName="difficulty"/>
      </RandomData>
    </PromptLine>
  </prompt>
</Prompts>
